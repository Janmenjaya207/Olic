
@{
    ViewBag.Title = "Scrap_List";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}

<div class="page-content">

    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Scrap Details</li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h4 style="margin-bottom: inherit;">Scrap Details:</h4>
            <hr>
            <div class="table-responsive mb-3" style="margin-top: 40px;">
                <table id="example2" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Sl. No.</th>
                            <th>Scrap Code</th>

                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (ViewBag.Scrapcode != null)
                        {
                            int count = 0;
                            foreach (var iteam in ViewBag.Scrapcode)
                            {
                                count = count + 1;
                                <tr>
                                    <td>@count</td>
                                    <td>@iteam.Scrap_Code_Name</td>

                                    <td><a href="/Scrap/Scrap_List_Details?id=@iteam.Scrap_Code_Autogenerate_Id">Details</a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>



        </div>
    </div>

</div>


@model BEL.CaseHearingViewModel

@{
    ViewBag.Title = "view_hearing_details";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}

<div class="page-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Case Details</li>
                </ol>
            </nav>
        </div>

    </div>
    <h6 class="mb-0 text-uppercase">Case Hearing Detail</h6>
    <hr>
    <form method="post" action="/lcms/viewcasedetails_lo">
        @if (Model.caseHearingModels.ToList().Count > 0)
        {
            foreach (var item in Model.caseHearingModels)
            {
                <div class="card">
                    <div class="card-body">
                        <div class="col-md-12">
                            <label for="validationCustom04" class="form-label"></label>

                            <table id="" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Hearing Detail for Date @item.HearingDate</th>
                                        <th></th>
                                    </tr>
                                </thead>

                                <tbody id="docdiv">

                                    <tr>
                                        <td>File No/Case No</td>
                                        <td>
                                            <span style="font-weight:bold;">@item.CaseNo</span>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td>Order of the Court</td>
                                        <td>
                                            <span style="font-weight:bold;">@item.OrderOfCourt</span>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td>Hearing Date</td>
                                        <td>
                                            <span style="font-weight:bold;">@item.HearingDate</span>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td>Status</td>
                                        <td>
                                            <span style="font-weight:bold;">@item.LCMS_Status_Name</span>
                                        </td>

                                    </tr>

                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-12">
                            <label for="validationCustom04" class="form-label"></label>

                            <table id="" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Document Name</th>
                                        <th>Action </th>
                                    </tr>
                                </thead>

                                <tbody id="docdiv">
                                    @if (item.CaseHearingDocModel.ToList().Count > 0)
                                    {
                                        foreach (var item1 in item.CaseHearingDocModel)
                                        {
                                            <tr>
                                                <td>@item1.DocumentName</td>
                                                <td><a target="_blank" href="@item1.docfile">View</a></td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                        
                    </div>
                </div>
            }
        }
        <div class="card">
            <div class="card-body">
                
                
                <div class="row">
                    <div class="col-md-10">


                    </div>
                    <div class="col-md-1">


                    </div>
                    <div class="col-md-1">

                        <a href="/lcms/CaseList_Law_Officer"><button type="button" class="btn btn-outline-danger" style="margin-top: 28px;">Back</button></a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>






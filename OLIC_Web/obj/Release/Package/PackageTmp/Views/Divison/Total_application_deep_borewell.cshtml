
@{
    ViewBag.Title = "Total_application_deep_borewell";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}

<div class="page-content">

    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="/divison/Dashboard"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Deep Borewell</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 style="margin-bottom: inherit;">Total Registered Farmers:</h4>
            <hr>
            <div class="table-responsive mb-3" style="margin-top: 40px;">
                <table id="example2" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Sl. No.</th>
                            <th>Registration No</th>
                            <th>Name</th>
                            <th>Mobile No</th>
                            <th>Gender</th>
                            <th>Category</th>
                            <th>Aadhaar No</th>
                            <th>View Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int count = 0;}
                        @if (ViewBag.DeepBorewell != null)
                        {
                            foreach (var iteam in ViewBag.DeepBorewell)
                            {
                                count = count + 1;
                                <tr role="row" class="even">
                                    <td>@count</td>
                                    <td>@iteam.DbRegistrationNo</td>
                                    <td>@iteam.FarmerName</td>
                                    <td>@iteam.MobileNo</td>
                                    <td>@iteam.Gender</td>
                                    <td>@iteam.Category</td>
                                    <td>@iteam.AadhaarNo</td>
                                    <td>
                                        @*<a href="/Divison/ShowRegistationdtlsDivision?id=@iteam.DeepBorewellRegdId" class="btn btn-outline-primary waves-effect waves-light m-1 btn1 btn-sm" title="View"><i class="bi bi-eye"></i></a>*@
                                        <a href="/Divison/ShowRegistationdtlsDivision?id=@iteam.DeepBorewellRegdId" title="view">View</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>


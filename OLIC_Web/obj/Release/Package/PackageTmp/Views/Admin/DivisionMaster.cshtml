
@{
    ViewBag.Title = "DivisionMaster";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}

<style>
    .border-primary1 {
        color: #4aff00;
        border-color: #21ff00 !important;
        background: linear-gradient(90deg, rgb(11 84 5) 0%, rgba(13,121,9,0.9951330874146533) 42%, rgba(0,255,37,1) 100%);
    }

    .border-danger1 {
        color: #ff0000;
        border-color: #ff0000 !important;
        background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgb(83 17 17) 42%, rgb(255 0 0) 100%);
    }
</style>

<main id="main">
    <form action="/Admin/DivisionMaster" method="post" enctype="multipart/form-data">

        <div class="page-content">
            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="/Admin/Dashboard"><i class="bx bx-home-alt"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Division Master</li>
                        </ol>
                    </nav>
                </div>
            </div>

            <section id="about" class="about testimonials ">
                @{string confirmMessage = Convert.ToString(TempData["Message"]); string warningMessage = Convert.ToString(TempData["WarningMessage"]);}
                @if (!string.IsNullOrEmpty(confirmMessage))
                {
                    <div class="alert border-0 border-start border-5 border-primary1 alert-dismissible fade show">
                        <input type="hidden" id="messagealert" style="background-color: lightgray;" value="@confirmMessage" />
                        @confirmMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                else if (!string.IsNullOrEmpty(warningMessage))
                {
                    <div class="alert border-0 border-start border-5 border-danger1 alert-dismissible fade show" id="divSuccessMessage">
                        <input type="hidden" id="messagealert" style="background-color: lightcoral;" value="@warningMessage" />
                        @warningMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                else
                {
                    <input type="hidden" id="messagealert" value="0" />
                }


                <div class="card">

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6 style="margin-bottom: inherit;">Division Details:</h6>
                            </div>
                            <div class="col-md-6">
                                <div style="text-align:right;">
                                    <button type="submit" class="btn btn-primary btn-sm">Sync Division Master Details</button>
                                </div>

                            </div>
                        </div>

                        <hr>
                        <div class="mb-3 table-responsive" style="margin-top: 40px;">
                            <table id="example2" class="table table-striped table-bordered table-responsive-md" style="border: 1px solid #dfdfdf;">
                                <thead>
                                    <tr>
                                        <th>Sl. No.</th>
                                        <th>Division Name</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @{ int count = 0;}
                                    @if (ViewBag.DivisionDtls != null)
                                    {
                                        foreach (var iteam in ViewBag.DivisionDtls)
                                        {

                                            count = count + 1;

                                            <tr role="row" class="even">
                                                <td>@count</td>
                                                <td>@iteam.DivisionName</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </section>

        </div>

    </form>
</main>
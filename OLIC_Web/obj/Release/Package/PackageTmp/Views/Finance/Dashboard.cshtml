    .ribbon {
        position: relative;
        padding: 0 0.5em;
        font-size: 18px;
        margin: 0 0 0 -16px;
        line-height: 1.875em;
        color: #e6e2c8;
        border-radius: 0 0.156em 0.156em 0;
        background: rgb(5 77 96);
        box-shadow: -1px 2px 3px rgb(0 0 0 / 50%);
        width: 17%;
    }

        .ribbon:before, .ribbon:after {
            position: absolute;
            content: '';
            display: block;
        }

        .ribbon:before {
            width: 0.469em;
            height: 100%;
            padding: 0 0 40px;
            top: 0;
            left: -0.469em;
            background: inherit;
            border-radius: 0.313em 0 0 0.313em;
        }

        .ribbon:after {
            width: 0.313em;
            height: 0.313em;
            background: rgba(0,0,0,0.35);
            bottom: -0.313em;
            left: -0.313em;
            border-radius: 0.313em 0 0 0.313em;
            box-shadow: inset -1px 2px 2px rgba(0,0,0,0.3);
        }


    @@media (max-width: 600px) {

        .ribbon {
            line-height: 1.143em;
            padding: 0.5em;
        }

            .ribbon:before, .ribbon:after {
                font-size: 0.714em;
            }
    }
</style>


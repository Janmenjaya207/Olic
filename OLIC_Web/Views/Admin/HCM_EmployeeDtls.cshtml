
@{
    ViewBag.Title = "HCM_EmployeeDtls";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}

<main id="main">
    <form action="/Admin/HCM_EmployeeDtls" method="post" enctype="multipart/form-data">

        <div class="page-content">
            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="/Admin/Dashboard"><i class="bx bx-home-alt"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Employee Details</li>
                        </ol>
                    </nav>
                </div>
            </div>

            <section id="about" class="about testimonials ">
                @{string confirmMessage = Convert.ToString(TempData["Message"]); string warningMessage = Convert.ToString(TempData["WarningMessage"]);}
                @if (!string.IsNullOrEmpty(confirmMessage))
                {
                    <div class="alert border-0 border-start border-5 border-primary1 alert-dismissible fade show">
                        <input type="hidden" id="messagealert" style="background-color: lightgray;" value="@confirmMessage" />
                        @confirmMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                else if (!string.IsNullOrEmpty(warningMessage))
                {
                    <div class="alert border-0 border-start border-5 border-danger1 alert-dismissible fade show" id="divSuccessMessage">
                        <input type="hidden" id="messagealert" style="background-color: lightcoral;" value="@warningMessage" />
                        @warningMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                else
                {
                    <input type="hidden" id="messagealert" value="0" />
                }


                <div class="card">

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6 style="margin-bottom: inherit;">Employee Details:</h6>
                            </div>
                            <div class="col-md-6">
                                <div style="text-align:right;">
                                    <a href="/Admin/HCM_EmployeeDtls"><button type="button" class="btn btn-primary btn-sm">Sync Employee Details</button></a>
                                </div>

                            </div>
                        </div>

                        <hr>
                        <div class="mb-3 table-responsive" style="margin-top: 40px;">
                            <table id="example2" class="table table-striped table-bordered table-responsive-md" style="border: 1px solid #dfdfdf;">
                                <thead>
                                    <tr>
                                        <th>Sl. No.</th>
                                        <th>Employee_Code</th>
                                        <th>Employee_Name</th>
                                        <th>Email_Id</th>
                                        <th>Mobile_No</th>
                                        <th>Department</th>
                                        <th>Designation</th>
                                        <th>Leave_Type</th>
                                        <th>Total_Leave</th>
                                        <th>Leave_Taken</th>
                                        <th>From_Date</th>
                                        <th>To_Date</th>
                                        <th>Remaing_Leave</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @{ int count = 0;}
                                    @if (ViewBag.EmpDtls != null)
                                    {
                                        foreach (var iteam in ViewBag.EmpDtls)
                                        {

                                            count = count + 1;

                                            <tr role="row" class="even">

                                                <td>@count</td>
                                                <td>@iteam.Employee_Code</td>
                                                <td>@iteam.Employee_Name</td>
                                                <td>@iteam.Email_Id</td>
                                                <td>@iteam.Mobile_No</td>
                                                <td>@iteam.Department</td>
                                                <td>@iteam.Designation</td>
                                                <td>@iteam.Leave_Type</td>
                                                <td>@iteam.Total_Leave</td>
                                                <td>@iteam.Leave_Taken</td>
                                                <td>@iteam.From_Date.ToString("dd/MM/yyyy")</td>
                                                <td>@iteam.To_Date.ToString("dd/MM/yyyy")</td>
                                                <td>@iteam.Remaing_Leave</td>
                                            </tr>


                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </section>

        </div>

    </form>
</main>


<div class="row">
    <div class="col-md-4">
        <label><b>Employee_Name</b></label>
    </div>
    <div class="col-md-4">
        <label id="p1">:@Model.Employee_Name</label>
    </div>

</div>

<div class="row">
    <div class="col-md-4">
        <label><b>Employee_Code</b></label>
    </div>
    <div class="col-md-4">
        <label id="p2">:@Model.EmployeeCode</label>
    </div>

</div>
<div class="row">
    <div class="col-md-4">
        <label><b>FromDate</b></label>
    </div>
    <div class="col-md-4">
        <label id="p1">:@Model.FromDate.Value.ToShortDateString()</label>
    </div>

</div>


<div class="row">
    <div class="col-md-4">
        <label><b>ToDate</b></label>
    </div>
    <div class="col-md-4">

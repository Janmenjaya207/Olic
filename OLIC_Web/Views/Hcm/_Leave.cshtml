        <div class="col-md-4">
            <label id="p2">:@Model.Remarks2</label>
        </div>

    </div>
}


@if (Model.remarks3 != null)
{
    <div class="row">
        <div class="col-md-4">
            <label><b>Third Level Remarks</b></label>
        </div>
        <div class="col-md-4">
            <label id="p2">:@Model.remarks3</label>
        </div>

    </div>
}



@if (Model.Remarks4 != null)
{
    <div class="row">
        <div class="col-md-4">
            <label><b>Fourth Level Remarks</b></label>
        </div>
        <div class="col-md-4">
            <label id="p2">:@Model.Remarks4</label>
        </div>

    </div>
}

@if (Model.Remarks5 != null)
{
    <div class="row">
        <div class="col-md-4">
            <label><b>Final Level Remarks</b></label>

        </div>
        <div class="col-md-4">
            <label id="p2">:@Model.Remarks5</label>
        </div>

    </div>
}

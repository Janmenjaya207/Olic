<!DOCTYPE html>
<html lang="en">
<head>
    <title>OLIC</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <!-- External CSS libraries -->
    <link type="text/css" rel="stylesheet" href="~/Animation1/assets/css/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="~/Animation1/assets/fonts/font-awesome/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="~/Animation1/assets/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Favicon icon -->
    <link rel="shortcut icon" href="~/Animation1/assets/img/favicon.ico" type="image/x-icon">

    <!-- Google fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Custom Stylesheet -->
    <link type="text/css" rel="stylesheet" href="~/Animation1/assets/css/style.css">
    <style type="text/css">
    </style>
</head>
<body id="top">
    <div class="page_loader"></div>

    <!-- Login 16 section start -->
    <div class="login-16">

        <div class="container">
            <div class="row login-box">
                <div class="col-lg-7 bg-img">
                    <div class="photo" style="margin-top: -20px;margin-right: 200px;">
                        <img src="~/Animation1/assets/img/img-16.png" alt="logo" class="w-100 img-fluid">

                    </div>
                </div>
                <div class="col-lg-5 form-section">
                    <div class="form-inner">
                        <a href="login-16.html" class="logo">
                            <img src="~/Animation1/assets/img/logo-2.png" alt="logo">
                        </a>
                        <h3>Sign In</h3>
                        <!--  <div class="alert alert-danger alert-dismissible fade show" role="alert">
                             <strong>Sorry,</strong> Something went wrong!
                             <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                         </div> -->
                        <form action="/Home/Login" method="POST" id="commonForm">
                            <div class="form-group position-relative clearfix">
                                <input name="uname" type="text" class="form-control" required>
                                
                            </div>
                            <div class="form-group clearfix position-relative password-wrapper">
                                <input name="password" type="password" class="form-control" autocomplete="off" aria-label="Password" required>
                                <i class="fa fa-eye password-indicator"></i>
                            </div>
                            <div class="checkbox form-group clearfix">
                                <div class="form-check float-start">
                                    <input class="form-check-input" type="checkbox" id="rememberme">
                                    <label class="form-check-label" for="rememberme">
                                        Remember me
                                    </label>
                                </div>
                                <a href="" class="link-light float-end forgot-password">Forgot your password?</a>
                            </div>
                            <div class="form-group clearfix mb-0">
                                <button type="submit" class="btn btn-primary btn-lg btn-theme">Login</button>
                            </div>

                        </form>

                    </div>
                </div>

            </div>
        </div>
        <div class="about-bg">
            <img src="~/Animation1/assets/img/rgdg.png" alt="About">
        </div>
        <div class="ocean">
            <div class="wave"></div>
            <div class="wave"></div>
        </div>

    </div>

    <!-- Login 16 section end -->
    <!-- External JS libraries -->
    <script src="~/Animation1/assets/js/jquery-3.6.0.min.js"></script>
    <script src="~/Animation1/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Animation1/assets/js/jquery.validate.min.js"></script>
    <script src="~/Animation1/assets/js/app.js"></script>
    <!-- Custom JS Script -->
</body>
</html>


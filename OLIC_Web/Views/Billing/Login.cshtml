    <!-- Login 16 section start -->
    <div class="login-16">

        <div class="container">
            <div class="row login-box">
                <div class="col-lg-7">
                    <h4 style="font-size: 40px;
    color: #fff0dc;
    font-family: system-ui;
    font-weight: 500;
    margin-bottom: 20px;text-transform: uppercase;">
                        Online Billing Portal
                    </h4>
                    <div class="photo bg-img">
                        <img src="~/Animation1/assets/img/ghghg.png" alt="logo" class="img-fluid">
                    </div>
                </div>
                <div class="col-lg-5 form-section">
                    <div class="form-inner">
                        <a href="login-16.html" class="logo">
                            <img src="~/Animation1/assets/img/logo-3.png" alt="logo">
                        </a>
                        <h3>Sign In</h3>
                        <!--  <div class="alert alert-danger alert-dismissible fade show" role="alert">
                             <strong>Sorry,</strong> Something went wrong!
                             <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                         </div> -->
                        <form action="/Home/Login" method="POST" id="commonForm">
                            <div class="form-group position-relative clearfix">
                                <input name="uname" type="text" class="form-control" placeholder="User Name" aria-label="Email Address">
                                <div class="login-popover login-popover-abs" data-bs-toggle="popover" data-bs-trigger="hover" title="Clarification" data-bs-content="And here's some amazing content. It's very engaging. Right?">
                                    <i class="fa fa-info-circle"></i>
                                </div>
                            </div>
                            <div class="form-group clearfix position-relative password-wrapper">
                                <input name="password" type="password" class="form-control" autocomplete="off" placeholder="Password" aria-label="Password">
                                <i class="fa fa-eye password-indicator"></i>
                            </div>
                            <div class="checkbox form-group clearfix">
                                <div class="form-check float-start">
                                    <input class="form-check-input" type="checkbox" id="rememberme">
                                    <label class="form-check-label" for="rememberme">
                                        Remember me
                                    </label>
                                </div>
                                <a href="forgot-password-16.html" class="link-light float-end forgot-password">Forgot your password?</a>
                            </div>
                            <div class="form-group clearfix mb-0">
                                <button type="submit" class="btn btn-primary btn-lg btn-theme">Login</button>
                            </div>

                        </form>

                    </div>
                </div>

            </div>
        </div>
